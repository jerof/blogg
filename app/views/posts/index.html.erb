<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% @posts.each do |post| %>
      <div class="well">
        <h3><%= link_to post.title, post_path(post) %></h3>
        <p class="lead"><%= truncate(post.body) %></p>
        <p>Submitted by <%= post.user.email %> <%= time_ago_in_words(post.created_at) %> ago,
          last updated <%= time_ago_in_words(post.updated_at) %> ago</p>
          <!--- Check how to truncate body text --->  
      </div>
    <% end %>
    </div>
  </div>
</div>
